@model IEnumerable<DB.Product>

@{
    ViewBag.Title = "ProductAll";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section id="top" class="one dark cover">
    <div class="container">
        <header>
            <h2 class="alt">Товары</h2>

        </header>
        <p>
            @Html.ActionLink("Добавить", "ProductsCreate")
        </p>
        <table class="table">
            <tr>
                <th>
                    Название
                </th>
                <th>
                    Информация
                </th>
                <th>
                    Цена
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Information)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Детали", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</section>