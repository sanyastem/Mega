@model List<DB.Product>

@{
    ViewBag.Title = Model[0].Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .img-product{
        width: 50%;
    }
    .block-img{
        float:left;
        width: 50%;
    }
    .block-txt{
        float:right;
        width: 50%;
    }
    h1{
        color:red;
    }
    .text-target{
        float: left;
        color: red !important;
        border-color: red !important;
            height: 45px;
                border-radius: 5px;
                padding-left: 15px;
    }
    .submit-forms{
        margin-left: 25px;
    background: red;
    height: 40px;
    border:none;
    color:#fff;
    }
</style>
<div class="sections section-2" id="fotopech">
    <div class="container">
        <div class="row">
            <div class="block-img">
                <img class="img-product" src="@Model[0].Picture" alt="@Model[0].Name" />
            </div>
            <div class="block-txt">

                <h1>@Model[0].Name</h1>
                <p>@Model[0].Information</p>
                <p>@Model[0].Price  бел.руб.</p>
                <div>

                    <form action="../../Home/Basket/@Model[0].Id" method="post">
                        <input class="text-target" type="number" name="col" value="1" style="float: left;"/>
                        <input class="submit-forms" type="submit"  value="Добавить в корзину" style="margin-left: 25px;"/>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

