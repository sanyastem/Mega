@model DB.Product

@{
    ViewBag.Title = "ProdectDetails";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section id="top" class="one dark cover">
    <div class="container">
        <header>
            <h2 class="alt">Товар</h2>

        </header>
        <dl class="dl-horizontal">
            <dt>
                Название
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                Информация
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Information)
            </dd>

            <dt>
                Цена
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price) бел.руб.
            </dd>

            <dt>
                Картинка
            </dt>

            <dd>
                <img src="@Model.Picture" alt="Alternate Text" />

            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Редактировать", "ProductEdit", new { id = Model.Id }) |
        @Html.ActionLink("Назад", "ProductAll")
    </p>
    </div>
</section>